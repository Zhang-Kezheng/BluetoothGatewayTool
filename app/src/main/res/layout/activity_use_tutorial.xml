<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activty.UseTutorialActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/user_tutorial_head_bg"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout">
        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@mipmap/back" app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="18dp" android:id="@+id/back" />
        <TextView
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:text="配置教程"
                android:textColor="#ff4a4a4a"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="38dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
                android:orientation="vertical" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/constraintLayout2">
            <ImageView android:layout_width="355dp" android:layout_height="200dp"
                       android:src="@mipmap/one"
                       app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                       android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
                       android:layout_marginTop="20dp"/>
            <ImageView android:layout_width="355dp" android:layout_height="374dp"
                       android:src="@mipmap/two"
                       app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginTop="20dp"
                       android:id="@+id/imageView4"/>
            <ImageView android:layout_width="355dp" android:layout_height="200dp"
                       android:src="@mipmap/three"
                       app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/imageView2" android:id="@+id/imageView3"
                       android:layout_marginTop="20dp"/>
            <Button
                    android:background="@drawable/main_button"
                    android:layout_width="355dp"
                    android:text="去 登 录"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    android:layout_height="56dp" android:id="@+id/go_login"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="22dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>