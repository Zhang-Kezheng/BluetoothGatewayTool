<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="335dp"
            android:layout_height="300dp">
        <TextView
                android:layout_width="53dp"
                android:layout_height="25dp"
                android:text="固定IP"
                android:textColor="#ff4a4a4a"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView7" android:layout_marginTop="23dp"/>

        <LinearLayout android:layout_width="335dp"
                      android:gravity="center_horizontal"
                      android:orientation="vertical"
                      android:layout_height="154dp" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView7"
                      android:layout_marginTop="4dp" android:id="@+id/linearLayout4">
            <LinearLayout android:layout_width="335dp" android:layout_height="40dp"
                          android:gravity="center_vertical"
                          android:layout_marginTop="20dp"
                          android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本机固定ip"
                        android:layout_marginStart="20dp"
                        android:textColor="#ff4a4a4a"
                        android:textSize="14sp"/>
                <EditText android:layout_width="0dp"
                          android:background="@null"
                          android:layout_weight="1"
                          android:gravity="end|center"
                          android:hint="0.0.0.0"
                          android:textColorHint="#ffd8d8d8"
                          android:layout_marginEnd="20dp"
                          android:textSize="14sp"
                          android:layout_height="40dp" android:inputType="number"
                          android:digits="0123456789." android:id="@+id/ip_edittext"/>
            </LinearLayout>
            <LinearLayout android:layout_width="295dp"
                          android:layout_height="2dp"
                          android:background="@drawable/main_line">
            </LinearLayout>
            <LinearLayout android:layout_width="335dp" android:layout_height="40dp"
                          android:gravity="center_vertical"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="子网掩码"
                        android:layout_marginStart="20dp"
                        android:textColor="#ff4a4a4a"
                        android:textSize="14sp"/>
                <EditText android:layout_width="0dp"
                          android:background="@null"
                          android:layout_weight="1"
                          android:gravity="end|center"
                          android:hint="0.0.0.0"
                          android:textColorHint="#ffd8d8d8"
                          android:layout_marginEnd="20dp"
                          android:textSize="14sp"
                          android:layout_height="40dp" android:inputType="number"
                          android:digits="0123456789." android:id="@+id/mask_edittext"/>
            </LinearLayout>
            <LinearLayout android:layout_width="295dp"
                          android:layout_height="2dp"
                          android:background="@drawable/main_line">
            </LinearLayout>
            <LinearLayout android:layout_width="335dp" android:layout_height="40dp"
                          android:gravity="center_vertical"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网关"
                        android:layout_marginStart="20dp"
                        android:textColor="#ff4a4a4a"
                        android:textSize="14sp"/>
                <EditText android:layout_width="0dp"
                          android:background="@null"
                          android:layout_weight="1"
                          android:gravity="end|center"
                          android:hint="0.0.0.0"
                          android:textColorHint="#ffd8d8d8"
                          android:layout_marginEnd="20dp"
                          android:textSize="14sp"
                          android:layout_height="40dp" android:inputType="number"
                          android:digits="0123456789." android:id="@+id/gateway_edittext"/>
            </LinearLayout>
            <LinearLayout android:layout_width="295dp"
                          android:layout_height="2dp"
                          android:background="@drawable/main_line">
            </LinearLayout>
        </LinearLayout>
        <Button android:layout_width="135dp" android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp"
                android:textColor="#ff3993cf"
                android:textSize="14sp"
                android:background="@drawable/save_button"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:layout_marginTop="20dp"
                android:text="保存" android:id="@+id/save"/>
        <Button android:layout_width="135dp" android:layout_height="40dp"
                android:id="@+id/cancel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="23dp"
                android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                android:gravity="center"
                android:background="@drawable/cancel"
                android:textColor="#ffbdbdbd"
                android:textSize="14sp"
                android:text="取消"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>